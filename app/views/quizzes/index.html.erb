<h1>Listing quizzes</h1>


<% @quizzes.each do |quiz| %>


        <%= form_tag check_quiz_path(quiz), :method => :get do %>
            <p> <%= radio_button_tag :interest, quiz.option1 %> <%= quiz.option1 %> </p>
            <p> <%= radio_button_tag :interest, quiz.option2 %> <%= quiz.option2 %> </p>
            <p> <%= radio_button_tag :interest, "peach" %> <%= quiz.option3 %></p>
            <p> <%= radio_button_tag :interest, "banana" %> <%= quiz.option4 %> </p>
            <p> <%= submit_tag 'Choice' %> </p>
        <% end %>    

<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Question</th>
      <th>Option1</th>      <th>Option2</th>
      <th>Option3</th>
      <th>Option4</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.user %></td>
        <td><%= quiz.question %></td>
        <td><%= quiz.option1 %></td>
        <td><%= quiz.option2 %></td>
        <td><%= quiz.option3 %></td>
        <td><%= quiz.option4 %></td>
        <td><%= quiz.answer %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

